{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["generate", "build-ui"]
    },
    "build": {
      "outputs": [".next/**"],
      "dependsOn": ["generate", "build-ui"]
    },
    "storybook": { "cache": false, "persistent": true },
    "lint": {},
    "generate": { "outputs": ["src/graphql/generated/**"] },
    "build-ui": {
      "outputs": ["dist/**"]
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"]
    }
  }
}
